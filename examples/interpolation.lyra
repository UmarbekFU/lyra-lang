-- String interpolation examples
let name = "World"
println("Hello, {name}!")

let x = 10
let y = 20
println("{x} + {y} = {to_string(x + y)}")

-- Nested expressions
let items = [1, 2, 3, 4, 5]
println("List: {to_string(items)}")

-- Interpolation with function calls
let rec factorial = fn (n) -> if n <= 1 then 1 else n * factorial(n - 1)
println("5! = {to_string(factorial(5))}")

-- Escaped braces
println("Use \{braces\} for interpolation")
